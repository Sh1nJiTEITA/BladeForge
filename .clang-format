# BraceWrapping:
#   AfterClass: false         # Скобка после объявления класса на новой строке
#   AfterControlStatement: true
#   AfterEnum: true
#   AfterFunction: true
#   AfterNamespace: true
#   AfterObjCDeclaration: true
#   AfterStruct: true
#   AfterUnion: true
#   BeforeCatch: true
#   BeforeElse: true
#   IndentBraces: false
#
# AllowAllArgumentsOnNextLine: false
# AllowAllParametersOfDeclarationOnNextLine: true
